{
  "name": "jeremybassi.com",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Jeremy Bassi's personal website",
  "author": "Jeremy Bassi",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"tailwindcss -i ./src/styles/index.css -o ./styles.css --watch\" \"python3 -m http.server 3000\"",
    "build": "tailwindcss -i ./src/styles/index.css -o ./styles.css --minify && mkdir -p dist && cp index.html styles.css favicon.svg dist/",
    "preview": "python3 -m http.server 3000 -d dist"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
